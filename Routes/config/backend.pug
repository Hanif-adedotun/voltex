doctype html
html(lang="en")
  head
    title= pageTitle
    link(rel="icon", href="https://drive.google.com/thumbnail?id=1Jz5p-jH2Lv8VzqNJPhKQLYcPnzeZWS4c")
    style(type="text/css").
        body{
          font-family: Azonix, 'Courier New', Courier, monospace;
          background-color: rgb(39, 45, 73);
          color: white;
          text-align: center;
          margin: auto;
        }
        h1{
          position: relative;
          font-weight: bold;
            
        }
        .logo{
          height: 20%;
          width: 10%;
        }
        .error{
          color: red;
          font-size: large;
        }
        .four{
          margin:auto;
          font-weight: bold;
          font-size: 900%;
        }
  body
    p
     img(src="https://drive.google.com/thumbnail?id=1Jz5p-jH2Lv8VzqNJPhKQLYcPnzeZWS4c", alt="Voltex Middlwear logo", class="logo")
