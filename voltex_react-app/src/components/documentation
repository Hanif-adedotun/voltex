
  showButton = () => {
    fetch('/about')//fetch the data from our express server running on localhost:8080
         .then(res => res.text())//parse the data in json format
         .then(about => this.setState({about}, () => console.log('About loaded', about)))
         .catch((error) =>{console.error('Unable to get data from database' + error);});
  }


